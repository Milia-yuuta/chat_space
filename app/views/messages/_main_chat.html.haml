.chat-main
  .main-header
    .main-header__left-box
      %h2.main-header__left-box__group
        #{@group.name} 
      %ul.main-header__left-box__member
        member: 
        %li.main-header__leftbox__member__name
        - @group.users.each do |group_member|
          %div #{group_member.name}&nbsp;
    .main-header__edit
      = link_to edit_group_path(@group[:id]) do
        Edit
  .messages
    = render @messages
    
  .form 
    = form_for [@group,@message] do |f|
      = f.text_field :content, class: 'new_message', placeholder: 'type a message'
      .input-box
        = f.label :image, class: 'input-box__image' do
          = icon('fa', 'image')
          = f.file_field :image, class: 'input-box__image__file'
      = f.submit 'Send', class: 'submit-btn'
